<h1>Listing annotations</h1>

<table class="table table-striped">
  <tr>
    <th>Internal ID</th>
    <th>Selected text</th>
    <th>Translation</th>
    <th>Language</th>
    <th>Paragraph idx</th>
    <th>Text idx</th>
    <th>Article ID</th>
    <th>Article URL</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @annotations.each do |annotation| %>
  <tr>
    <td><%= annotation.id %></td>
    <td><%= annotation.selected_text %></td>
    <td><%= annotation.translation %></td>
    <td><%= annotation.lang %></td>
    <td><%= annotation.paragraph_idx %></td>
    <td><%= annotation.text_idx %></td>
    <td><%= annotation.article_id%></td>
    <td><%= annotation.article.nil? ? '': annotation.article.url%></td>
    <td><%= link_to 'Show', annotation %></td>
    <td><%= link_to 'Edit', edit_annotation_path(annotation) %></td>
    <td><%= link_to 'Destroy', annotation, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

