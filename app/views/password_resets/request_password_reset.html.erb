<% provide(:title, "Forgot password") %>
<h1>Forgot password</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:password_reset, url: request_password_reset_path) do |f| %>
        <% if flash[:error] || flash[:errors] %>
            <div class="alert alert-danger"><%= flash[:error] || flash[:errors] %></div>
        <% end %>
        <% if flash[:info] %>
            <div class="alert alert-info"><%= flash[:info] || flash[:info] %></div>
        <% end %>
        <% flash[:error] = flash[:errors] = flash[:info] = nil %>

        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>

        <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>