<% provide(:title, 'WordNews - Reset password') %>
<h1>WordNews - Reset password</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url:{:controller => "PasswordResets", :action => "reset_password", :id => params[:id]},
                 method: :post, :html => { :id => "reset_password", :class => "reset_password" } ) do |f| %>

        <% if flash[:error] || flash[:errors] %>
            <div class="alert alert-danger"><%= flash[:error] || flash[:errors] %></div>
        <% end %>
        <% if flash[:info] %>
            <div class="alert alert-info"><%= flash[:info] || flash[:info] %></div>
        <% end %>
        <% flash[:error] = flash[:errors] = flash[:info] = nil %>

        <%= hidden_field_tag :email, @user.email %>

        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control'%>

        <%= f.label :password_confirmation, "Confirmation" %>
        <%= f.password_field :password_confirmation, class: 'form-control'%>

        <%= f.submit "Update password", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>